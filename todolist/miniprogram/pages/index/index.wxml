<!-- 表单开始部分 -->
<view class="form-bar">
  <view class="form-inp">
    <input bindinput="inpHandle" placeholder="请输入待办事项" />
    
  </view>
  <view>
    <button bindtap="addHandle">添加</button>
  </view>
</view>
<!-- 表单结束部分 -->
<!-- 列表开始部分 -->
<view class="item-bar {{item.isCheck?'active':''}}"
  wx:for="{{todoList}}"
  wx:key="index"
  bindtap="checkItem"
  data-id="{{item.id}}"
>
 <view class="item-check">
  <checkbox checked="{{item.isCheck}}"/>
 </view>
 <view class="item-title">
  {{item.title}}
 </view>
 <view class="item-btn">
  <button type="warn" bindtap="doneHandle" data-id="{{item.id}}"  size="mini">完成</button>
 </view>
</view>
<button type="warn" bindtap="doneCheck"  size="mini">完成选择</button>
<!-- 列表结束部分 -->





